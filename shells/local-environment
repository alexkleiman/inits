alias chrome="/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome" 

export PATH=~/bin:$PATH:~/.cabal/bin

alias lock="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"

alias cr="python ~/.scripts/upload.py \-y \-s codereview.10gen.com \-m"

export MONGO=~/mongo-fork
export msrc=$MONGO/src/mongo
export CSCOPE_DB=$msrc

function build {
    CHANGED_DIR=false

    if [[ "$PWD" != "$MONGO" ]]; then
        pushd $MONGO
        CHANGED_DIR=true
    fi

    NTHREADS=4
    echo "Building with $NTHREADS threads..."

    ARGS=$@

    scons -j 4 --64 --dbg=on --opt=off $ARGS > build_all_x64debug.log

    if [[ $CHANGED_DIR = true ]]; then
        popd
    fi
}

alias bbuild="build --berkeleyDB"

cdpath=($msrc)

alias xlock="gnome-screensaver-command -l"
alias unittests="sh build/unittests.txt"
alias pg="echo 28a2c40f6326f9ef1a8b8839f95339a8534876c0"
